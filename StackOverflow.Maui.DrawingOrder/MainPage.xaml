<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackOverflow.Maui.DrawingOrder.MainPage">

    <Grid>
        <Rectangle WidthRequest="300" HeightRequest="300" BackgroundColor="Green"/>
        <ScrollView>
            <VerticalStackLayout Spacing="20">
                <Rectangle WidthRequest="200" HeightRequest="200" BackgroundColor="Red"/>
                <Rectangle WidthRequest="200" HeightRequest="200" BackgroundColor="Red"/>
                <Rectangle WidthRequest="200" HeightRequest="200" BackgroundColor="Red"/>
                <Rectangle WidthRequest="200" HeightRequest="200" BackgroundColor="Red"/>
                <Rectangle WidthRequest="200" HeightRequest="200" BackgroundColor="Red"/>
            </VerticalStackLayout>
        </ScrollView>
        <Rectangle WidthRequest="100" HeightRequest="100" BackgroundColor="Orange"/>
    </Grid>

</ContentPage>
