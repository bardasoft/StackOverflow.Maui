<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StackOverflow.Maui.Mvvm.DisplayPrompt.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Spacing="25"
            Padding="30,0"
            VerticalOptions="Center">

            <Label Text="{Binding BalanceAmount}"/>
            <Entry Text="{Binding NewAmount, Mode=TwoWay}"/>
            <Button Text="Add Amount" Command="{Binding AddAmountCommand}"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
