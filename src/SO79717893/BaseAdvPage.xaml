<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SO79717893.BaseAdvPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:SO79717893"
    x:Name="baseAdvPage"
    Title="BaseAdvPage">
    <ContentPage.ControlTemplate>
        <ControlTemplate>
            <Grid RowDefinitions="*,Auto">
                <ScrollView>
                    <ContentPresenter />
                </ScrollView>
                <Label
                    Grid.Row="1"
                    Margin="10"
                    FontSize="Medium"
                    HorizontalOptions="Center"
                    Text="{Binding Advertisement, x:DataType='local:BaseAdvPage', Source={Reference baseAdvPage}}"
                    TextColor="Black"
                    VerticalOptions="Center" />
            </Grid>
        </ControlTemplate>
    </ContentPage.ControlTemplate>
</ContentPage>
